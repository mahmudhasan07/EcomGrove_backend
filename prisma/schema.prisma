generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  email       String   @unique
  password    String
  phoneNumber String
  role        Role     @default(USER) @map("role")
  address     String
  city        String
  state       String
  zipCode     String
  uploadImage String?
  status      Status   @default(PENDING)
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt
}

model Product {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  brandName   String
  price       Float
  category    CategoryList
  image       String[]
  createAt    DateTime     @default(now())
  updateAt    DateTime     @updatedAt
}

model OTPModel {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String
  otp      String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

enum Status {
  ACTIVE
  PENDING
  BLOCKED
}

enum Role {
  ADMIN
  USER
}

enum CategoryList {
  ELECTRONICS
  Home_Kitchen
  BEAUTY
  SPORTS
  FASHION
  TOYS
}
